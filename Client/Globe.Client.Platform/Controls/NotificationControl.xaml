<UserControl x:Class="Globe.Client.Platform.Controls.NotificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Globe.Client.Platform.Controls"
             xmlns:converters="clr-namespace:Globe.Client.Platform.Converters"
             xmlns:schemasControls="http://schemas.controls.com/"
             x:Name="notificationControl">

    <UserControl.Resources>

        <converters:BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
        <converters:NotificationLevelToImageConverter x:Key="notificationLevelToImageConverter" />
        <converters:NotificationToColorConverter x:Key="notificationToColorConverter" />

        <Style TargetType="{x:Type TextBlock}" x:Key="ToolTextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Background" Value="#05163D"/>
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="Margin" Value="1"/>
        </Style>

        <DataTemplate x:Key="notificationTemplate">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="32" />
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*" />
                    <ColumnDefinition Width="50*" />
                    <ColumnDefinition Width="25*" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>
                <Image
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            Width="50"
            Height="50"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Source="{Binding Level, Converter={StaticResource notificationLevelToImageConverter}}" />
                <schemasControls:LocTextBlock
            Grid.Row="0"
            Grid.Column="1"
            TextTrimming="WordEllipsis"
            Foreground="{Binding Level, Converter={StaticResource notificationToColorConverter}}"
            Text="{Binding Title}"
            FontWeight="Bold"
            VerticalAlignment="Center"
            HorizontalAlignment="Stretch"
            Margin="3"/>
                <schemasControls:LocTextBlock
            Grid.Row="1"
            Grid.Column="1"
            TextTrimming="WordEllipsis"
            Foreground="{Binding Level, Converter={StaticResource notificationToColorConverter}}"
            Text="{Binding Message}"
            VerticalAlignment="Center"
            HorizontalAlignment="Stretch"/>
                <controls:NotificationButton
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="2"
            Width="50"
            Height="50"
            Background="#05163D"
            Visibility="{Binding Linkable, Converter={StaticResource booleanToVisibilityConverter}}"
            Cursor="Hand"
            Level="{Binding}"
            Notifier="{Binding ElementName=notificationControl}"
            Command="{Binding ElementName=notificationHistory, Path=DataContext.NavigateToCommand}"
            CommandParameter="{Binding ViewToNavigate}">
                    <Image Source="{Binding Image}" />
                </controls:NotificationButton>
                <TextBlock
            Grid.Row="0"
            Grid.Column="3"            
            FontSize="20"
            Foreground="Gray">            
            <Hyperlink
                Command="{Binding ElementName=notificationControl, Path=DataContext.RemoveNotificationCommand}"
                CommandParameter="{Binding}"
                Cursor="Hand">X</Hyperlink>
                </TextBlock>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <DockPanel>

        <Popup Name="notificationHistory"
       Popup.StaysOpen="True"
       Popup.PlacementTarget="{Binding ElementName=seeNotificationHistory}"
       PopupAnimation="Slide">

            <Border BorderThickness="3"
              BorderBrush="#05163D"
              Background="WhiteSmoke"
              Width="400"
              MaxHeight="1000"
              MaxWidth="600">
                <DockPanel>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25" />
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="25" />
                        </Grid.RowDefinitions>
                        <Rectangle Grid.Row="0" Fill="#05163D"/>
                        <TextBlock Grid.Row="0" Text="Notifications" Style="{StaticResource ToolTextBlock}" TextAlignment="Left" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Row="0" Text="X" Style="{StaticResource ToolTextBlock}" TextAlignment="Right" HorizontalAlignment="Right" MouseLeftButtonDown="NotificationHistoryPopUp_MouseLeftButtonDown"/>
                        <ListBox Grid.Row="1" Name="notificationList"
                                    MaxHeight="300"
                                    ItemsSource="{Binding ElementName=notificationControl, Path=Notifications}"
                                    ItemTemplate="{StaticResource notificationTemplate}"
                                    Background="Transparent"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Stretch">
                        </ListBox>
                        <TextBlock Grid.Row="2" HorizontalAlignment="Right" Margin="4">
                  <Hyperlink Command="{Binding ElementName=notificationControl, Path=DataContext.RemoveAllNotificationsCommand}">Remove All</Hyperlink>
                        </TextBlock>
                    </Grid>
                </DockPanel>
            </Border>
        </Popup>

        <Popup Name="lastNotification"
           Popup.StaysOpen="True"
           Popup.PlacementTarget="{Binding ElementName=seeNotificationHistory}">

            <Border BorderThickness="1"
              BorderBrush="#05163D"
              Background="WhiteSmoke"
              Width="350"
              MaxWidth="600">
                <ContentControl Name="notification"
                        MaxHeight="300"
                        Content="{Binding ElementName=notificationControl, Path=NewNotification}"
                        ContentTemplate="{StaticResource notificationTemplate}"
                        Background="Transparent"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch" />
            </Border>
        </Popup>

        <Button x:Name="seeNotificationHistory"
                         Margin="1"
                         DockPanel.Dock="Right"
                         Height="{Binding ElementName=notificationControl, Path=Height, Mode=OneWay}"
                         Width="{Binding ElementName=notificationControl, Path=Width, Mode=OneWay}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*" />
                    <RowDefinition Height="70*"/>
                </Grid.RowDefinitions>
                <Image Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" Height="30" Width="30" Margin="2" Source="{Binding ElementName=notificationControl, Path=ImageSource, Mode=OneWay}"/>
                <Border Grid.Column="2" Grid.Row="0" Background="Red" CornerRadius="999" Padding="5,2,5,2" Visibility="{Binding ElementName=notificationControl, Path=NotificationExists, Converter={StaticResource booleanToVisibilityConverter}}">
                    <TextBlock Foreground="White" FontWeight="Bold" FontSize="12" Text="{Binding ElementName=notificationControl, Path=NotificationCount}"/>
                </Border>
            </Grid>
        </Button>
        <ContentControl />
    </DockPanel>

</UserControl>

