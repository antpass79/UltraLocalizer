<platform:ContextToolBar x:Class="Globe.Client.Localizer.Views.CurrentJobWindowToolBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:platform="http://schemas.platform.com/"
        xmlns:controls="http://schemas.controls.com/"
        mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <platform:ContextToolBar.Resources>
        <Style TargetType="controls:LocButton" BasedOn="{StaticResource ToolBarButton}">
        </Style>

    </platform:ContextToolBar.Resources>
    <DockPanel LastChildFill="False" Background="Transparent">
        <controls:LocToggleSwitch
            IsChecked="{Binding ShowFilters}"
            CheckedContent="{Binding Localize[HideFilters]}"
            UncheckedContent="{Binding Localize[ShowFilters]}">
        </controls:LocToggleSwitch>
        <controls:LocButton Command="{Binding ExportToXmlCommand}" Content="{Binding Localize[Export_to_XML]}" />
    </DockPanel>
</platform:ContextToolBar>
