<platform:ContextToolBar x:Class="Globe.Client.Localizer.Views.CurrentJobWindowToolBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Globe.Client.Localizer"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:platform="http://schemas.platform.com/"
        mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <platform:ContextToolBar.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource ToolBarButton}">
        </Style>

    </platform:ContextToolBar.Resources>
    <DockPanel LastChildFill="False" Background="Transparent">
        <Button Margin="5" Width="150" Style ="{StaticResource GrayButton}" Command="{Binding ExportToXmlCommand}">Export to xml</Button>
    </DockPanel>
</platform:ContextToolBar>
