<UserControl x:Class="Globe.Client.Localizer.Views.EditStringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:platform="http://schemas.platform.com/"
        xmlns:controls="http://schemas.controls.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <platform:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" True="Visible" False="Collapsed" />
        <Style TargetType="Panel" x:Key="SectionPanel">
            <Setter Property="Background" Value="WhiteSmoke" />
            <Setter Property="Margin" Value="3" />
        </Style>
        <Style TargetType="Panel" x:Key="BottomGridPanel">
            <Setter Property="Background" Value="WhiteSmoke" />
            <Setter Property="Margin" Value="1" />
            <Setter Property="DockPanel.Dock" Value="Bottom" />
        </Style>
    </UserControl.Resources>

    <controls:LocGrid>
        <controls:LocDockPanel Style="{StaticResource LocDockPanelStyle}">
            <controls:LocDockPanel Style="{StaticResource LocDockPanelStyle}" DockPanel.Dock="Left">
                <controls:LocGrid DockPanel.Dock="Top" Style="{StaticResource SectionPanel}" Width="350" Visibility="{Binding ShowFilters, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <controls:LocLabel Style="{StaticResource LocLabelTitle}" Grid.ColumnSpan="2" Content="{Binding Localize[Filters]}"/>
                    <controls:LocTextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Localize[Language]}"/>
                    <controls:LocComboBox  Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Languages}" SelectedItem="{Binding SelectedLanguage}" DisplayMemberPath="Description" ToolTip="{Binding SelectedLanguage.Description}" ToolTipService.InitialShowDelay="500">
                        <controls:LocComboBox.InputBindings>
                            <KeyBinding Gesture="Return" Command="{Binding SearchCommand}"></KeyBinding>
                        </controls:LocComboBox.InputBindings>
                    </controls:LocComboBox>
                    <controls:LocTextBlock Grid.Row="2" Grid.Column="0">String Id</controls:LocTextBlock>
                    <controls:LocTextBox Grid.Row="2" Grid.Column="1" PreviewTextInput="LocTextBox_PreviewTextInput" Text="{Binding InsertedStringId, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center">
                        <controls:LocTextBox.InputBindings>
                            <KeyBinding Gesture="Return" Command="{Binding SearchCommand}"></KeyBinding>
                        </controls:LocTextBox.InputBindings>
                    </controls:LocTextBox>
                    <controls:LocTextBlock Grid.Row="3" Grid.Column="0">Translated String</controls:LocTextBlock>
                    <controls:LocTextBox Grid.Row="3" Grid.Column="1" Text="{Binding InsertedString, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center">
                        <controls:LocTextBox.InputBindings>
                            <KeyBinding Gesture="Return" Command="{Binding SearchCommand}"></KeyBinding>
                        </controls:LocTextBox.InputBindings>
                    </controls:LocTextBox>
                    <controls:LocTextBlock Grid.Row="4" Grid.Column="0">Concept</controls:LocTextBlock>
                    <controls:LocTextBox  Grid.Row="4" Grid.Column="1" Text="{Binding InsertedConcept, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center">
                        <controls:LocTextBox.InputBindings>
                            <KeyBinding Gesture="Return" Command="{Binding SearchCommand}"></KeyBinding>
                        </controls:LocTextBox.InputBindings>
                    </controls:LocTextBox>
                    <Button Grid.Row="5" Grid.Column="1" Command="{Binding SearchCommand}" Content="{Binding Localize[Search]}"/>

                    <platform:Spinner Grid.Row="1" Grid.RowSpan="5" Grid.ColumnSpan="2" Busy="{Binding FiltersBusy}" />
                </controls:LocGrid>
            </controls:LocDockPanel>

            <controls:LocDockPanel Style="{StaticResource SectionPanel}">
                <controls:LocGrid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="95*" />
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <controls:LocDataGrid Name="grid" Grid.Row="0" FrozenColumnCount="1" ItemsSource="{Binding LocalizeStrings}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="50" CanUserResize="False">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button HorizontalAlignment="Center" MinWidth="0" Command="{Binding ElementName=grid, Path=DataContext.LocalizeStringViewEditCommand}" CommandParameter="{Binding}">
                                            <Image Width="24" Height="24" Source="/Globe.Client.Platform.Assets;component/Icons/edit.png" />
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Binding="{Binding StringId}" Header="Id" Width="5*">
                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <controls:LocTextBlock Style="{StaticResource DataGridHeaderTextBlock}" Text="{Binding Content, RelativeSource=
                                         {RelativeSource Mode=TemplatedParent}}"/>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Value}" Header="String" Width="25*">
                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <controls:LocTextBlock Style="{StaticResource DataGridHeaderTextBlock}" Text="{Binding Content, RelativeSource=
                                         {RelativeSource Mode=TemplatedParent}}"/>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding StringType}" Header="String" Width="5*">
                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <controls:LocTextBlock Style="{StaticResource DataGridHeaderTextBlock}" Text="{Binding Content, RelativeSource=
                                         {RelativeSource Mode=TemplatedParent}}"/>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn IsReadOnly="True" Header="Contexts" Width="65*">
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DataGridColumnHeader">
                                                    <controls:LocDockPanel LastChildFill="False" Background="Transparent">
                                                        <controls:LocTextBlock Style="{StaticResource DataGridHeaderTextBlock}" DockPanel.Dock="Top" HorizontalAlignment="Center">Contexts</controls:LocTextBlock>
                                                        <controls:LocGrid DockPanel.Dock="Bottom">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition />
                                                                <ColumnDefinition />
                                                                <ColumnDefinition />
                                                                <ColumnDefinition />
                                                            </Grid.ColumnDefinitions>
                                                            <controls:LocTextBlock Grid.Column="0">Concept</controls:LocTextBlock>
                                                            <controls:LocTextBlock Grid.Column="1">Context</controls:LocTextBlock>
                                                            <controls:LocTextBlock Grid.Column="2">ComponentNamespace</controls:LocTextBlock>
                                                            <controls:LocTextBlock Grid.Column="3">InternalNamespace</controls:LocTextBlock>
                                                        </controls:LocGrid>
                                                    </controls:LocDockPanel>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="FontWeight" Value="DemiBold"/>
                                        <Setter Property="MinWidth" Value="300"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ItemsControl ItemsSource="{Binding LocalizeStringDetails}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <controls:LocGrid DockPanel.Dock="Bottom">
                                                        <controls:LocGrid.ColumnDefinitions>
                                                            <ColumnDefinition Width="25*"/>
                                                            <ColumnDefinition Width="25*"/>
                                                            <ColumnDefinition Width="25*"/>
                                                            <ColumnDefinition Width="25*"/>
                                                        </controls:LocGrid.ColumnDefinitions>
                                                        <controls:LocTextBlock Grid.Column="0" MinWidth="100" Text="{Binding Concept}" />
                                                        <controls:LocTextBlock Grid.Column="1" MinWidth="100" Text="{Binding ContextName}" />
                                                        <controls:LocTextBlock Grid.Column="2" MinWidth="60" Text="{Binding ComponentNameSpace}" />
                                                        <controls:LocTextBlock Grid.Column="3" MinWidth="60" Text="{Binding InternalNameSpace}" />
                                                    </controls:LocGrid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </controls:LocDataGrid>

                    <platform:Spinner Grid.Row="0" Diameter="60" Busy="{Binding GridBusy}" />
                    <controls:LocDockPanel Grid.Row="1" DockPanel.Dock="Bottom" LastChildFill="True" Style="{StaticResource BottomGridPanel}">
                        <controls:LocTextBlock DockPanel.Dock="Left" Text="{Binding FilterBy}" TextAlignment="Left" FontSize="11" FontWeight="Bold"></controls:LocTextBlock>
                        <controls:LocTextBlock DockPanel.Dock="Right" Text="{Binding ItemCount}" TextAlignment="Left" FontSize="11" FontWeight="Bold"></controls:LocTextBlock>
                        <controls:LocTextBlock DockPanel.Dock="Right" TextAlignment="Right" Text="{Binding Localize[Items_Count]}" FontSize="11" FontWeight="Bold"></controls:LocTextBlock>
                    </controls:LocDockPanel> 
                </controls:LocGrid>
            </controls:LocDockPanel>

        </controls:LocDockPanel>

        <platform:Spinner Grid.Row="1" Diameter="60" Busy="{Binding ConceptDetailsBusy}" />
    </controls:LocGrid>
</UserControl>
