<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:toggle="clr-namespace:ToggleSwitch;assembly=ToggleSwitch"
                    xmlns:controls="clr-namespace:MyLabLocalizer.Core.Controls">

    <Style TargetType="controls:LocToggleSwitch">

        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="FontSize" Value="9" />
        <Setter Property="CheckedBackground" Value="Transparent" />
        <Setter Property="CheckedForeground" Value="WhiteSmoke" />
        <Setter Property="UncheckedBackground" Value="Transparent" />
        <Setter Property="UncheckedForeground" Value="WhiteSmoke" />

        <!--The 2 below setter are used to center the title-->
        <Setter Property="ThumbSize" Value="0" />
        <Setter Property="ThumbTemplate">
            <Setter.Value>
                <ControlTemplate>
                    <TextBlock></TextBlock>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

</ResourceDictionary>